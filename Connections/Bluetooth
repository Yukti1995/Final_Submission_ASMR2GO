#guidelines from official raspberry pi forums https://www.raspberrypi.org/forums/viewtopic.php?t=235519

sudo apt-get install pulseaudio
sudo apt-get install pulseaudio-module-bluetooth

sudo systemctl restart bluetooth

bluetoothctl
#bluetooth window

$bluetooth: power on
$bluetooth: dicoverable on
$bluetooth: pairable on
$bluetooth: agent on
$bluetooth: quit

#in main terminal start pulseaudio
pulseaudio --start

#can also be configured for an auto start on boot up
raspi-config





